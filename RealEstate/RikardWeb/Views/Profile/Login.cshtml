@model LoginModel
@{
    ViewBag.Title = "Личный кабинет";
}
<section>
    <h1 class="text-center">Личный кабинет</h1>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <form class="form-horizontal" asp-action="Login" asp-route-ReturnUrl="@ViewData["ReturnUrl"]">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <button class="btn btn-default" type="submit">Войти</button>
                    </div>
                </div>
            </form>
            <ul class="list-group">
                <li class="list-group-item"><a asp-action="ResetPassword">Восстановить пароль</a></li>
                <li class="list-group-item"><a asp-action="Register">Зарегистрироваться</a></li>
            </ul>
        </div>
    </div>
</section>