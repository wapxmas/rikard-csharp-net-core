@model ConfirmPhoneModel
@{
    ViewBag.Title = "Подтверждение телефона";
}
<section>
    <h1 class="text-center">Подтверждение телефона</h1>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <form class="form-horizontal" asp-action="ConfirmPhone">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label asp-for="Phone"></label>
                        <input class="form-control" asp-for="Phone">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <button class="btn btn-default" type="submit">Отослать код по SMS</button>
                    </div>
                </div>
                @Html.HiddenFor(m => m.Id)
            </form>
        </div>
    </div>
</section>